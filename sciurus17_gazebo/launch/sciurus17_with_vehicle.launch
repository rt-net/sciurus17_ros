<?xml version="1.0"?>
<launch>
  <env name="GAZEBO_MODEL_PATH" value="$(find sciurus17_description):$(find sciurus17_gazebo)/models:$(find sciurus17_gazebo):$(find sciurus_vehicle_gazebo)/models:$(find sciurus_vehicle_description)"/>
  <env name="gazebo_media_path" value="${find sciurus17_gazebo}"/> 

  <!-- Gazebo configurations-->
  <arg name="paused" default="true"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="use_rviz" default="false"/>

  <include file="$(find sciurus17_control)/launch/sciurus17_fake_control.launch"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find sciurus17_gazebo)/worlds/vehicle.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description"
    command="$(find xacro)/xacro --inorder '$(find sciurus17_description)/urdf/sciurus17.urdf.xacro' use_gazebo_simulation:=true"/>

  <include file="$(find sciurus17_moveit_config)/launch/sciurus17_planning.launch">
    <arg name="use_gazebo" value="true"/>
    <arg name="load_robot_description" value="false"/>
    <arg name="use_rviz" value="$(arg use_rviz)"/>
  </include>

  <node name="initpose_sciurus17" pkg="sciurus17_gazebo" type="initpose_sciurus17.py"/>
  <include file="$(find sciurus_vehicle_bringup)/launch/sciurus_vehicle_sim.launch"/>
</launch>
